# EditorConfig for Barista
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 2

[*.{m,mm}]
indent_style = space
indent_size = 2

[*.lua]
indent_style = space
indent_size = 2

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{json,jsonc}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[CMakeLists.txt]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

